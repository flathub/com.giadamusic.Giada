{
    "id": "com.giadamusic.Giada",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "giada",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=x11",
        /* Note playback */
        "--socket=pulseaudio",
        /* MIDI */
        "--device=all",
        /* For pipewire + JACK */
        "--filesystem=xdg-run/pipewire-0",
        /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
        "--filesystem=home",
        /* Allow other instances to see lockfiles */
        "--env=TMPDIR=/var/tmp",
        "--env=VST3_PATH=/app/extensions/Plugins/vst3"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "22.08",
            "add-ld-path": "lib",
            "merge-dirs": "vst3",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "modules": [
        {
            "name": "fltk",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DOPTION_USE_THREADS=ON",
                "-DOPTION_CAIRO=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/fltk/fltk/archive/release-1.3.7.tar.gz",
                    "sha256": "019f65810fb0ea5acac14c852193e8f374e822e6a3034a3c80ed8676f6f3a090"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/man",
                "/share",
                "/lib/pkgconfig",
                "*.so",
                "*.la",
                "*.a"
            ]
        },
        {
            "name": "rtmidi",
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "*.la",
                "*.a",
                "*.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.music.mcgill.ca/~gary/rtmidi/release/rtmidi-5.0.0.tar.gz",
                    "sha256": "48db0ed58c8c0e207b5d7327a0210b5bcaeb50e26387935d02829239b0f3c2b9"
                }
            ]
        },
        {
            "name": "fmt",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/fmtlib/fmt/releases/download/8.1.1/fmt-8.1.1.zip",
                    "sha256": "23778bad8edba12d76e4075da06db591f3b0e3c6c04928ced4a7282ca3400e5d"
                }
            ]
        },
        {
            "name": "giada",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DWITH_VST3=ON"
            ],
            "post-install": [
                "sed -e '/<releases>/ a <release version=\"0.22.0\" date=\"2022-06-11\" />' -i ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml",
                "desktop-file-edit --set-icon=${FLATPAK_ID} ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "install -d /app/extensions/Plugins"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.giadamusic.com/data/giada-v0.22.0-src.tar.gz",
                    "sha256": "8a24b12a23678a506095eab33437b30867b7537653529c5f7a261e2955596af7"
                },
                {
                    "type": "git",
                    "url": "https://github.com/nlohmann/json.git",
                    "commit": "db78ac1",
                    "dest": "src/deps/json.git"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/giada-fs.patch",
                        "patches/giada-destkop.patch",
                        "patches/juce-616-header.patch"
                    ]
                },
                {
                    "type": "shell",
                    "commands": [
                        "rm -fr src/deps/json",
                        "mv src/deps/json{.git,}"
                    ]
                }
            ]
        }
    ]
}
