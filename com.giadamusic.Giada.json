{
    "id": "com.giadamusic.Giada",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "giada",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=x11",
        /* Note playback */
        "--socket=pulseaudio",
        /* MIDI */
        "--device=all",
        /* For pipewire + JACK */
        "--filesystem=xdg-run/pipewire-0",
        "--system-talk-name=org.freedesktop.RealtimeKit1",
        /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
        "--filesystem=home",
        /* Allow other instances to see lockfiles */
        "--env=TMPDIR=/var/tmp",
        "--env=VST3_PATH=/app/extensions/Plugins/vst3"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "21.08",
            "add-ld-path": "lib",
            "merge-dirs": "lxvst;vst3",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "cleanup": [
        "/bin/jack*",
        "/bin/alsa*"
    ],
    "modules": [
        {
            "name": "fltk",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DOPTION_USE_THREADS=ON",
                "-DOPTION_CAIRO=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/fltk/fltk/archive/release-1.3.7.tar.gz",
                    "sha256": "019f65810fb0ea5acac14c852193e8f374e822e6a3034a3c80ed8676f6f3a090"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/man",
                "/share",
                "/lib/pkgconfig",
                "*.so",
                "*.la",
                "*.a"
            ]
        },
        "shared-modules/linux-audio/jack2.json",
        {
            "name": "rtmidi",
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "*.la",
                "*.a",
                "*.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.music.mcgill.ca/~gary/rtmidi/release/rtmidi-4.0.0.tar.gz",
                    "sha256": "370cfe710f43fbeba8d2b8c8bc310f314338c519c2cf2865e2d2737b251526cd"
                }
            ]
        },
        {
            "name": "giada",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DWITH_VST3=ON"
            ],
            "post-install": [
                "sed -e '/<releases>/ a <release version=\"0.19.2\" date=\"2021-12-16\" />' -i ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml",
                "desktop-file-edit --set-icon=${FLATPAK_ID} ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "install -d /app/extensions/Plugins"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.giadamusic.com/data/giada-v0.19.2-src.tar.gz",
                    "sha256": "797bcb3b2aff17026d37d7ccfbe1ca191e2a88c0877e9f04ae72c9487993af95"
                },
                {
                    "type": "patch",
                    "path": "giada-fs.patch"
                }
            ]
        }
    ]
}
