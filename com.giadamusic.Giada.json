{
    "id": "com.giadamusic.Giada",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "giada",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=x11",
        /* Note playback */
        "--socket=pulseaudio",
        /* MIDI */
        "--device=all",
        /* For pipewire + JACK */
        "--filesystem=xdg-run/pipewire-0",
        /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
        "--filesystem=home",
        /* Allow other instances to see lockfiles */
        "--env=TMPDIR=/var/tmp"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "22.08",
            "add-ld-path": "lib",
            "merge-dirs": "vst3;lv2",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "modules": [
        {
            "name": "rtmidi",
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "*.la",
                "*.a",
                "*.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.music.mcgill.ca/~gary/rtmidi/release/rtmidi-5.0.0.tar.gz",
                    "sha256": "48db0ed58c8c0e207b5d7327a0210b5bcaeb50e26387935d02829239b0f3c2b9"
                }
            ]
        },
        {
            "name": "fmt",
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/lib/pkgconfig",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/fmtlib/fmt/releases/download/8.1.1/fmt-8.1.1.zip",
                    "sha256": "23778bad8edba12d76e4075da06db591f3b0e3c6c04928ced4a7282ca3400e5d"
                }
            ]
        },
        {
            "name": "jsoncpp",
            "buildsystem": "cmake-ninja",
            "cleanup": [
                "/share"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nlohmann/json.git",
                    "tag": "v3.11.2",
                    "commit": "bc889afb4c5bf1c0d8ee29ef35eaaf4c8bef8a5d"
                }
            ]
        },
        "shared-modules/glu/glu-9.json",
        {
            "name": "giada",
            /* fail to build with cmake-ninja */
            "buildsystem": "cmake",
            "builddir": true,
            "cleanup": [
                "/bin/JUCE-*"
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DWITH_VST3=ON"
            ],
            "post-install": [
                "sed -e '/<releases>/ a <release version=\"0.23.0\" date=\"2022-09-17\" />' -i ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml",
                "desktop-file-edit --set-icon=${FLATPAK_ID} ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "mv /app/bin/giada{,.bin}",
                "install -Dm755 ../giada.sh /app/bin/giada",
                "install -d /app/extensions/Plugins"
            ],
            "sources": [
                {
                    "type": "git",
                    "dest": "src/deps/juce",
                    "url": "https://github.com/juce-framework/JUCE.git",
                    "commit": "b08520c2de1771af3dfcbfbc0e0b6b0b5eb083b0"
                },
                {
                    "type": "archive",
                    "url": "https://www.giadamusic.com/data/giada-v0.23.0-src.tar.gz",
                    "sha256": "b9d0871c778a5cc2d7b65991a447b3c1d4880ef7186b2939a0d087a7e43ad302"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/giada-fs.patch",
                        "patches/giada-path.patch",
                        "patches/juce-616-header.patch"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "giada.sh",
                    "commands": [
                        "#!/bin/sh",
                        "export LV2_PATH=/app/extensions/Plugins/lv2:/app/lib/lv2:$HOME/.lv2",
                        "exec giada.bin $@"
                    ]
                }
            ]
        }
    ]
}
